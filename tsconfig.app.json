/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [ "node" ],
    "typeRoots": [ "../node_modules/@types" ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@environments/*": ["./src/environments/*"],
      "@services/*": ["./src/app/services/*"],
      "@utils/*": ["./src/app/utils/*"]
    }
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
